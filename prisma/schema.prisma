// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PRICE_TYPE {
  BUDGET
  STANDARD
  PREMIUM
}

model Turf {
  id           Int        @id @default(autoincrement())
  name         String
  main_image   String
  description  String
  images       String[]
  slug         String     @unique
  open_time    String
  close_time   String
  price_type   PRICE_TYPE
  grounds      Ground[]
  location_id  Int
  location     Location   @relation(fields: [location_id], references: [id])
  turf_type_id Int
  turf_type    Turf_type  @relation(fields: [turf_type_id], references: [id])
  reviews      Review[]
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt
}

model Ground {
  id          Int      @id @default(autoincrement())
  name        String
  price       String
  description String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  turf_id     Int
  turf        Turf     @relation(fields: [turf_id], references: [id])
}

model Location {
  id         Int      @id @default(autoincrement())
  name       String
  turfs      Turf[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Turf_type {
  id         Int      @id @default(autoincrement())
  name       String
  turfs      Turf[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model User {
  id         Int      @id @default(autoincrement())
  first_name String
  last_name  String
  city       String
  email      String
  password   String
  phone      String
  reviews    Review[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Review {
  id         Int    @id @default(autoincrement())
  first_name String
  last_name  String
  text       String
  rating     Float
  turf_id    Int
  turf       Turf   @relation(fields: [turf_id], references: [id])
  user_id    Int
  user       User   @relation(fields: [user_id], references: [id])
}
